[flake8]
max-line-length = 140
max-complexity = 20
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    media,
    static

ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E722: do not use bare 'except' (common in Django)
    E722,
    # C901: function is too complex (legacy code)
    C901,
    # E501: line too long (relaxed for CI)
    E501,
    # F401: module imported but unused (sometimes needed for Django)
    F401,
    # F841: local variable assigned but never used
    F841,
    # E402: module level import not at top of file
    E402,
    # F811: redefinition of unused name
    F811,

per-file-ignores =
    # Django settings files can have unused imports
    settings.py:F401,F403,F405
    test_settings.py:F401,F403,F405
    # Test files can have unused imports and long lines
    test_*.py:F401,E501,F841,E402
    # __init__.py files can have unused imports
    __init__.py:F401
    # Management commands can be complex
    */management/commands/*:F401,C901,E501
    # Admin files can be complex
    admin.py:F401,F811,C901
    # Views can be complex (legacy)
    views.py:F401,F811,E402,C901
    # Service files can be complex
    */services/*:F401,C901
    # Our fix script
    fix_linting.py:F401,E302,W293,W291,E305

# Specific to Django
django = True
